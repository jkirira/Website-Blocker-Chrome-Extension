{
  "manifest_version": 3,
  "name": "URL change detector",
  "description": "Detects a URL change in a tab, and inject a script to the page!",
  "version": "1.0",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}